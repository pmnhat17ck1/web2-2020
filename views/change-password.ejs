<%- include('header',{ title: 'login'}); -%>
    <div class="row">
        <div class="col-sm-7">
            <div id="carouselExampleIndicators_login" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" id="silde_login">
                    <div class="carousel-item active">
                        <img src="./img/01.jpg" class="d-block w-100" alt="..." />
                    </div>
                    <div class="carousel-item">
                        <img src="./img/02.jpg" class="d-block w-100" alt="..." />
                    </div>
                    <div class="carousel-item">
                        <img src="./img/03.jpg" class="d-block w-100" alt="..." />
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators_login" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators_login" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-sm-5">

            <div class="card" id="card_login">
                <div class="card-body">
                    <center>
                        <h2 style="color:#72B441">Quên mật khẩu</h2>
                    </center>
                    <hr />
                    <div class="d-flex flex-column text-center">
                        <form method="POST">
                            <div class="form-group">
                                <input type="password" class="form-control" id="password1" name="password1" placeholder="Mật khẩu hiện tại...">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="password2" name="password2" placeholder="Mật khẩu mới...">
                            </div>
                            <input type="submit" class="btn btn-block btn-round" style="background-color: #72B441;color:white" value="submit">
                        </form>

                        <div class="text-center text-muted delimiter">Hoặc</div>
                        <div class="d-flex justify-content-center social-buttons">
                            <button type="button" class="btn  btn-round" style="background-color:#72B441;color:white " data-toggle="tooltip" data-placement="top" title="Twitter">
              <i class="fab fa-twitter"></i>
            </button>
                            <button type="button" class="btn btn-round" style="background-color:#72B441;color:white" data-toggle="tooltip" data-placement="top" title="Facebook">
              <i class="fab fa-facebook"></i>
            </button>
                            <button type="button" class="btn  btn-round" style="background-color:#72B441;color:white" data-toggle="tooltip" data-placement="top" title="Linkedin">
              <i class="fab fa-linkedin"></i>
            </button>
                        </div>
                        <div class="d-flex flex-column text-center">
                            <p><a href="#">Quên mật khẩu</a></p>
                            <div class="signup-section" style="margin-top: -20px;">Bạn chưa có tài khoản? <a href="/register" class="text-info">Đăng ký</a>.</div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <%- include('footer'); -%>