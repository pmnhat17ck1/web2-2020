<%- include('header',{ title: 'Quên mật khẩu'}); -%>
    <div class="row" id="row_input">
        <div class="col-sm-7">
            <div id="carouselExampleIndicators_login" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" id="silde_login">
                    <div class="carousel-item active">
                        <img src="./img/01.jpg" class="d-block w-100" alt="..." />
                    </div>
                    <div class="carousel-item">
                        <img src="./img/02.jpg" class="d-block w-100" alt="..." />
                    </div>
                    <div class="carousel-item">
                        <img src="./img/03.jpg" class="d-block w-100" alt="..." />
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators_login" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators_login" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-sm-5">

            <div class="card" id="card_login">
                <div class="card-body">
                    <br>
                    <center>
                        <h2 style="color:#28A745">Quên mật khẩu</h2>
                    </center>

                    <hr />
                    <% if (errors!=null) { %>

                        <div class="alert alert-danger fade show" role="alert" id="snackbar">
                            <%=errors%>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <%} else { %>

                            <% } %>
                                <div class="d-flex flex-column text-center">
                                    <form method="POST">
                                        <div class="form-label-group">
                                            <input type="text" class="form-control " id="username3" name="username" placeholder="Tên đăng nhập" required autofocus>
                                            <label for="username3">Tên đăng nhập</label>
                                        </div>
                                        <div class="form-label-group">
                                            <input type="text" class="form-control " id="cmnd3" name="cmnd" placeholder="Số CMND" required autofocus>
                                            <label for="cmnd3">Số CMND</label>
                                        </div>
                                        <hr>
                                        <div class="btn_boxshadow btn-round">
                                            <input type="submit" class="btn btn-block btn-round" value="Xác nhận">
                                        </div>
                                    </form>


                                </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <%- include('footer'); -%>