<%- include('header',{ title: 'Đăng ký'}); -%>

    <div class="row" id="row_input">


        <div class="col-md-6">
            <div id="carouselExampleIndicators_register" class="carousel slide" style="height:100%;" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" id="silde_register">
                    <div class="carousel-item active">
                        <img src="./img/01.jpg" class="d-block w-100" alt="..." />
                    </div>
                    <div class="carousel-item">
                        <img src="./img/02.jpg" class="d-block w-100" alt="..." />
                    </div>
                    <div class="carousel-item">
                        <img src="./img/03.jpg" class="d-block w-100" alt="..." />
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators_register" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators_register" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-md-6">

            <div class="card" id="card_register">
                <div class="card-body">
                    <center>
                        <h2 style="color:#28A745">Đăng ký</h2>
                    </center>
                    <hr />
                    <% if (errors!=null) { %>

                        <div class="alert alert-danger fade show" role="alert" id="snackbar">
                            <%=errors%>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <%} else { %>

                            <% } %>
                                <div class="d-flex flex-column text-center">
                                    <form method="POST">
                                        <div class="form-row">
                                            <div class="col-sm-6 col-md-12 col-lg-6">
                                                <div class="form-label-group">
                                                    <input type="text" class="form-control " id="username2" name="username" placeholder="Tên đăng nhập" autofocus>
                                                    <label for="username2">Tên đăng nhập</label>
                                                </div>
                                            </div>
                                            <div class="col-sm-6 col-md-12 col-lg-6">
                                                <div class="form-label-group">
                                                    <input type="email" class="form-control " id="email2" name="email" placeholder="Địa chỉ Email">
                                                    <label for="email2">Địa chỉ Email</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="col-sm-6 col-md-12 col-lg-6">
                                                <div class="form-label-group">
                                                    <input type="password" class="form-control " id="password2" name="password" placeholder="Mật khẩu">
                                                    <label for="password2">Mật khẩu</label>
                                                </div>
                                            </div>
                                            <div class="col-sm-6 col-md-12 col-lg-6">
                                                <div class="form-label-group">
                                                    <input type="text" class="form-control " id="hoten2" name="displayname" placeholder="Họ và tên">
                                                    <label for="hoten2">Họ và tên</label>
                                                </div>
                                            </div>
                                        </div>

                                        <select name="typepaper" id="typepaper" class="form-control" style="margin-bottom: 20px; padding-left: 25px;;-webkit-box-shadow: 0 8px 6px -6px #93C66E;-moz-box-shadow: 0 8px 6px -6px #93C66E;box-shadow: 0 8px 6px -6px #93C66E; text-align: left;">
                                <option value="CMND">CMND</option>
                                <option value="CCCD">CCCD</option>
                                <option value="HC">HC</option>
                              </select>


                                        <div class="form-label-group">
                                            <input type="text" class="form-control " id="cmnd1" name="cmnd" placeholder="Số CMND" required>
                                            <label for="cmnd1">Số giấy tờ</label>
                                        </div>
                                        <div class="form-label-group">
                                            <input type="date" class="form-control border_input" id="daterange2" name="daterange" placeholder="Ngày cấp">
                                            <label for="daterange2">Ngày cấp</label>
                                        </div>

                                        <div class="btn_boxshadow btn-round">
                                            <input type="submit" class="btn btn-block btn-round" value="Đăng ký">
                                        </div>

                                    </form>


                                    <div class="d-flex flex-column text-center" style="margin-top: 10px;">
                                        <p>Bạn đã có tài khoản? <a href="/login" class="text-info">Đăng nhập</a></p>
                                    </div>
                                </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <%- include('footer'); -%>